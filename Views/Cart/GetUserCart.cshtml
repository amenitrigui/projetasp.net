   @using Admin.Models.Entities;
@model Product

@{
    ViewData["Title"] = "GetUserCart";
}

<h1>GetUserCart</h1>
<div style="width:90%;margin:auto" class="mt-2">
    @if (Model != null && Model.CartDetails != null && Model.CartDetails.Count > 0)
    {
        <h5>My Cart</h5>

        <table class="table table-striped">
            <tr>
                <th>Book</th>
                <th>Image</th>
                <th>Genre</th>
                <th>Unit Price(INR)</th>
                <th>quantite</th>

                <th>Total Price</th>
                <th>Action</th>
            </tr>
            @foreach (var item in Model.CartDetails)
            {
                <tr>
                    <td>@item.product.CartDetails</td>
                     <td>
                        @if (!string.IsNullOrEmpty(item.product.imagefile))
                        {
                            <img src="/Images/1.jpg" style="width:80px;height:100px" />
                        }
                        else
                        {
                            <img src="/Images/@item.product.imagefile" style="width:80px;height:100px" />
                        }
                    </td> 
                    <td>@item.product.Name</td>
                    <td>@item.product.prix X @item.Quantity</td>
                    <td>@(item.product.prix * item.Quantity)</td>
                   @*  <td>
                        <a class="btn btn-info" href="/Cart/AddItem?bookId=@item.BookId&&redirect=1">+</a>
                        <a class="btn btn-info" href="/cart/removeitem?bookid=@item.BookId">-</a>
                    </td> *@
                </tr>
            }
        </table>

        <div class="my-2">
            <h5>Total(INR): </h5>
            @(Model.CartDetails.Select(item => item.product.prix * item.Quantity).Sum())
        </div>

       @*  <div class="my-2">
            <a class="btn btn-primary" href="/Cart/Checkout">Checkout</a>
        </div>
 *@
    }
    else
    {
        <h5>Cart is empty</h5>
    }
</div>
 